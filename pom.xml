<?xml version="1.0" encoding="UTF-8"?>
<project
    xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.contoso</groupId>
    <artifactId>congenial-guacamole</artifactId>
    <packaging>jar</packaging>
    <version>0.0.1</version>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
    <dependencies>
        <!-- tag::joda[] -->
        <dependency>
            <groupId>joda-time</groupId>
            <artifactId>joda-time</artifactId>
            <version>2.4</version>
        </dependency>
        <!-- end::joda[] -->
        <!-- tag::junit[] -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.12</version>
            <scope>test</scope>
        </dependency>
        <!-- end::junit[] -->
    </dependencies>
    <distributionManagement>
        <repository>
            <id>credentialNexus214302</id>
            <name>Contoso Releases</name>
            <url>http://172.17.0.3:8081/nexus/content/repositories/contoso-releases/</url>
        </repository>
        <snapshotRepository>
            <id>credentialNexus214302</id>
            <name>Contoso Snapshots</name>
            <url>http://172.17.0.3:8081/nexus/content/repositories/contoso-snapshots/</url>
        </snapshotRepository>
    </distributionManagement>
    <!--
    If you have access to scm then you can place actual url's.
    Otherwise with <revisionOnScmFailure /> you can give some fake URLs as follows.
    -->
    <scm>
        <!--
        <connection>scm:git:http://127.0.0.1/dummy</connection><developerConnection>scm:git:https://127.0.0.1/dummy</developerConnection><tag>HEAD</tag><url>http://127.0.0.1/dummy</url>
        -->
        <connection>scm:git:https://github.com/sheeeng/congenial-guacamole</connection>
        <developerConnection>scm:git:https://github.com/sheeeng/congenial-guacamole</developerConnection>
        <tag>HEAD</tag>
        <url>https://github.com/sheeeng/congenial-guacamole</url>
    </scm>
    <build>
        <finalName>${project.artifactId}-${project.version}.${buildNumber}</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.6.1</version>
                <configuration>
                    <!-- https://issues.apache.org/jira/browse/MCOMPILER-209 -->
                    <!-- http://stackoverflow.com/a/17948010 -->
                    <useIncrementalCompilation>false</useIncrementalCompilation>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
                <version>2.8.1</version>
                <executions>
                    <execution>
                        <id>default-deploy</id>
                        <phase>deploy</phase>
                        <goals>
                            <goal>deploy</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>3.0.2</version>
                <configuration>
                    <archive>
                        <!-- Put the entries into META-INF/MANIFEST.MF file. -->
                        <manifestEntries>
                            <contosoTag1>CONTOSOSOTAG</contosoTag1>
                            <contosoTag2>${project.artifactId}</contosoTag2>
                            <contosoTag3>${project.version}</contosoTag3>
                            <contosoTag4>${buildNumber}</contosoTag4>
                            <contosoTag5>${gitenv.remoteurl}</contosoTag5>
                            <contosoTag6>${gitenv.branchname}</contosoTag6>
                            <contosoTag7>${gitenv.commitsCount}</contosoTag7>
                            <contosoTag8>${gitenv.revision}</contosoTag8>
                            <contosoTag9>${gitenv.shortrevision}</contosoTag9>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>2.1</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <transformers>
                                <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                                    <mainClass>guacamole.Potato</mainClass>
                                </transformer>
                            </transformers>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <!-- To use the plugin goals in your POM or parent POM -->
            <!-- http://maven.apache.org/components/surefire/maven-surefire-plugin/plugin-info.html -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.19.1</version>
            </plugin>
            <!-- To use the plugin goals in your POM or parent POM -->
            <!-- http://www.mojohaus.org/versions-maven-plugin/plugin-info.html -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>versions-maven-plugin</artifactId>
                <version>2.3</version>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>buildnumber-maven-plugin</artifactId>
                <version>1.4</version>
                <executions>
                    <execution>
                        <id>buildNumber</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>create</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <!--
                    The doCheck and doUpdate flags actually talk to repository if it's true,
                    Check would ensure that there are no local changes.
                    Update would update it.
                    -->
                    <doCheck>false</doCheck>
                    <doUpdate>false</doUpdate>
                    <!--
                    This ensures that even if we are not connected to scm than also
                    take the version from local .svn file.
                    -->
                    <revisionOnScmFailure>UnknownRevisionOnScmFailure</revisionOnScmFailure>
                    <!--
                    Generate sequence build number based on:
                    build number and timestamp.
                    Note: Remove below custom <format> and <items> elements
                    to revert back to SCM revision.
                    -->
                    <!-->
                    <format>b{0,number}_{1,date,yyyyMMddHHmmss}_{2}</format>
                    <items>
                        <item>buildNumber</item>
                        <item>timestamp</item>
                        <item>${user.name}</item></items>                        -->
                        <format>{0,number}</format>
                        <items>
                            <item>buildNumber</item>
                        </items>
                        <shortRevisionLength>14</shortRevisionLength>
                    </configuration>
                </plugin>
            </plugins>
        </build>
        <!-- To use the report goals in your POM or parent POM -->
        <reporting>
            <plugins>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>versions-maven-plugin</artifactId>
                    <version>2.3</version>
                </plugin>
            </plugins>
        </reporting>
    </project>
